<Window x:Class="ResourceSample01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Border x:Name="border" Width="100" Height="100" Background="{StaticResource AnthemBrush}" />
        <Border Width="100" Height="100" Background="{DynamicResource AnthemBrush}" />
        <Button Content="Change AnthemBrush" Click="DynamicButton_Click"/>
        <Button Content="Set brush" Click="Button_Click"/>
    </StackPanel>
</Window>
